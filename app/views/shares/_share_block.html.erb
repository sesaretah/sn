<div class="card card-aside mb-2" style="height: 100px;">
  <%= link_to item, class: "card-aside-column", style: "background-image: url(#{item.image('medium')})" do%>

  <%end%>
  <a href="#" ></a>
  <div class="card-body d-flex flex-column p-2">
    <h6><%= link_to item do%><%=truncate(item.name, length: 50)%><%end%></h6>
    <div class="text-muted text-justify small" style="min-height:30px; overflow: hidden;"><%= raw truncate(item.raw_content, length: 110)%></div>

  </div>


  <div class="col-md-3">
    <div class="row">
      <div class="mt-2 pull-right h-5  mr-auto pr-2 small" style="color: #d6c7c7">
        <% if item.class.name == 'Profile'%>
        <i class="fe fe-users"></i>
        <%end%>
        <% if item.class.name == 'Stream'%>
        <i class="fa fa-water"></i>
        <%end%>
        <% if item.class.name == 'Post'%>
        <i class="fa fa-edit"></i>
        <%end%>
        <% if item.class.name == 'Publication'%>
        <i class="fas fa-scroll"></i>
        <%end%>
        <span class="pull-left">
        <% if defined?(share) && !share.blank? && !share.stream_id.blank?%>
        <%= truncate(Stream.find(share.stream_id).title, length: 10) rescue nil%>
        <%end%>
        <span>
      </div>
    </div>
    <div class="row" style="margin-top:42px;">
      <div class="d-flex mb-0 mr-auto pr-2">

        <%= render partial:'/follows/follow', locals:{type: item.class.name, id: item.id}%>
        <%= render partial:'/shares/share', locals:{type: item.class.name, id: item.id}%>
        <%= render partial:'/likes/like', locals:{type: item.class.name, id: item.id}%>
        <%= render partial:'/bookmarks/bookmark', locals:{type: item.class.name, id: item.id}%>
      </div>
    </div>
  </div>
</div>
