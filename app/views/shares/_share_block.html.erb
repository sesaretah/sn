<div class="card card-aside mb-2" style="height: 100px;">
  <%= link_to item, class: "card-aside-column", style: "background-image: url(#{item.image('medium')})" do%>

  <%end%>
  <a href="#" ></a>
  <div class="card-body d-flex flex-column">
    <h6><%= link_to item do%><%= item.name%><%end%></h6>
    <div class="text-muted text-justify small" style="min-height:30px"><%= truncate(item.content, length: 80)%></div>

  </div>


  <div class="d-flex mt-auto mr-auto pull-left">

    <%= render partial:'/follows/follow', locals:{type: item.class.name, id: item.id}%>
    &nbsp<%= render partial:'/shares/share', locals:{type: item.class.name, id: item.id}%>
    &nbsp<%= render partial:'/likes/like', locals:{type: item.class.name, id: item.id}%>
  </div>
  <div class="mt-2 pull-left pl-2 h-5">
    <% if item.class.name == 'Profile'%>
      <i class="fe fe-users"></i>
    <%end%>
    <% if item.class.name == 'Stream'%>
      <i class="fa fa-water"></i>
    <%end%>
    <% if item.class.name == 'Post'%>
      <i class="fa fa-edit"></i>
    <%end%>
  </div>
</div>
