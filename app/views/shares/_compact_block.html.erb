  <% if !item.blank?%>
<div class="card card-aside mb-1" style="height: 50px;">
  <div class="card-body d-flex flex-column p-2 white">
    <span style="font-size: 9px;"><% if defined?(title)%><%=raw title%><%end%></span>
    <div class="text-muted text-justify small" style="min-height:30px; overflow: hidden;">
      <%= link_to item do%><%=truncate(item.name, length: 35)%><%end%>
    </div>

  </div>


  <div class="col-md-3">
    <div class="row">
      <div class="mt-2 pull-right h-5  mr-auto pr-2 small" style="color: #d6c7c7">
        <% if item.class.name == 'Profile'%>
        <i class="fe fe-users"></i>
        <%end%>
        <% if item.class.name == 'Stream'%>
        <i class="fa fa-water"></i>
        <%end%>
        <% if item.class.name == 'Post'%>
        <i class="fa fa-edit"></i>
        <%end%>
        <% if item.class.name == 'Publication'%>
        <i class="fas fa-scroll"></i>
        <%end%>
        <span class="pull-left">
        <% if defined?(share) && !share.blank? && !share.stream_id.blank?%>
        <%= truncate(Stream.find(share.stream_id).title, length: 10) rescue nil%>
        <%end%>
        <span>
      </div>
    </div>
  </div>
</div>
<%end%>
