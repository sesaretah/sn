<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @posts.each do |post| %>
          <tr>
                        <td><%= post.stream_id %></td>
                        <td><%= post.uuid %></td>
                        <td><%= post.title %></td>
                        <td><%= post.content %></td>
                        <td><%= link_to t(:show), post %></td>
            <td><%= link_to t(:edit), edit_post_path(post) %></td>
            <td><%= link_to t(:destroy), post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
