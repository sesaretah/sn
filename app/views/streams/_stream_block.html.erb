<div class="card">
  <a href="/streams/<%= stream.id%>"><img class="card-img-top" src="<%= stream.cover('medium')%>" alt=""></a>
  <div class="card-body d-flex flex-column white">
    <h4><a href="/streams/<%= stream.id%>"><%= stream.title%></a></h4>
    <div class="text-muted"><%= truncate( stream.details, length: 65)%></div>
    <div class="d-flex align-items-center pt-5 mt-auto">
      <div class="ml-auto mr-auto text-muted">
          <%= render partial:'/follows/follow', locals:{type: 'Stream', id: stream.id}%>
          <%= render partial:'/shares/share', locals:{type: 'Stream', id: stream.id}%>
          <%= render partial:'/likes/like', locals:{type: 'Stream', id: stream.id}%>
          <%= render partial:'/bookmarks/bookmark', locals:{type: 'Stream', id: stream.id}%>
      </div>
      <div>
        <small class="d-block text-muted"></small>
      </div>

    </div>
  </div>
</div>

<% if params[:action] == 'show'%>
<div class="list-group list-group-transparent mb-4 text-center">
  <%= link_to stream, class: "list-group-item list-group-item-action active small", style:'font-weight:normal;',  method: :delete, data: { confirm: 'Are you sure?' } do%>
  <i class="fe fe-trash" style="vertical-align:middle;"></i> <%=t :delete_this_stream%>
  <%end%>
</div>
<div class="list-group list-group-transparent mb-4 text-center">
  <%= link_to "/streams/#{stream.id}/edit", class: "list-group-item list-group-item-action active small", style:'font-weight:normal;' do%>
  <i class="fe fe-edit" style="vertical-align:middle;"></i> <%=t :edit%>
  <%end%>
</div>
<%end%>
