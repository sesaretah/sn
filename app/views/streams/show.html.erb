<div class='row'>
  <div class="col-lg-4 ">
    <%= render partial: 'streams/stream_block', locals: {stream: @stream}%>
  </div>
  <div class="col-lg-8 order-lg-1">
    <div class="card">
      <div class="card-header">
        <%= @stream.title%>
      </div>
      <div class="card-body justify">
        <%= @stream.details%>
      </div>
    </div>
    <div class="card">

      <div class="table-responsive">
        <div class="stream-header">
          <a href="/posts/new?stream_id=<%= @stream.id%>"><span class="avatar avatar-blue"><i class="fe fe-edit"></i></span></a>
          <a href="/questions/new?stream_id=<%= @stream.id%>"><span class="avatar avatar-orange"><i class="fa fa-question"></i></span></a>
        </div>
        <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
          <tbody>
            <% for item in @combined %>
            <tr>
              <td class="text-center pl-2 pr-2">
                <% if item.class.name == 'Post'%>
                <span class="avatar avatar-blue"><i class="fe fe-edit"></i></span>
                <%end%>
                <% if item.class.name == 'Question'%>
                <span class="avatar avatar-orange"><i class="fa fa-question"></i>
                <%end%>
            </td>
            <td style='width: 55%' class="pl-2 pr-2">
              <% if item.class.name == 'Post'%>
              <a href='/posts/<%= item.id%>'>
                <div><%= truncate(item.title, length: 40) %></div>
                <div class="small text-muted">
                  <%=  truncate(sanitize(item.content, tags:['<div>', '<br>', '<p>']), length: 30) %>
                  </div>
                </a>
                <%end %>
                <% if item.class.name == 'Question'%>
                <a href='/questions/<%= item.id%>'>
                  <div><%= truncate(item.content, length: 40) %></div>
                </a>
                <%end %>
              </td>
              <td class="pl-2 pr-2">
                <span class="tag mt-2">
                  <span class="tag-avatar avatar" style="background-image: url(<%= item.user.profile.image('tiny')%>)"></span>
                  <%= truncate(item.user.profile.name, length: 10)%>
                </span>
              </td>
              <td class="pl-2 pr-2">
                <% if item.class.name == 'Post'%>
                <i class="far fa-comments" style='vertical-align:-2px;'></i> (<%= item.discussions.count %>)
                <i class="fe fe-trash" style='vertical-align:-2px;'></i>
                <%end %>
                <% if item.class.name == 'Question'%>
                <i class="fas fa-reply" style='vertical-align:-2px;'></i> (<%= item.answers.count %>)
                <i class="fe fe-trash" style='vertical-align:-2px;'></i>
                <%end %>
              </td>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
